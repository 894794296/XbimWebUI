{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es6", "dom" ],
    "types": [ "node", "webgl2" ]
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "./src/workers/**/*",
    "dist",
    "examples"
  ]
}
